alias ls='ls -GFh'
alias sl='ls -GFh'
alias ll='ls -lah'
alias l.='ls -d .*'
alias lf='ls -p | grep -v /'
alias ld='ls -d */'
alias lt='ls -lhart'
alias lz='ls -AFlSr'
alias t='touch'
alias ff='find . -type f -iname'

alias md='mkdir -pv'
alias fd='find . -type d -name'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../../'

alias mv='mv -iv'
alias cp='cp -iv'
alias ln='sudo ln -iv'
alias rm='sudo rm -riv'
alias rmf='sudo rm -rfiv'

alias df='df -hPT | column -t'
alias du='du -sh'
alias free='free -mth'
alias path='echo $PATH | tr ':' '\n' | nl'

alias ping='ping -c4'
alias ports='netstat -tulanp'
alias ipconfig='curl ifconfig.me && curl ifconfig.me/host'

alias q='exit'
alias s='sudo'
alias c='clear'
alias a='clear && - **| less'
alias ag='- **| grep'

alias ax='chmod a+x'

alias sshami='ssh root@192.168.1.132'
