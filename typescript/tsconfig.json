{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "pretty": true ,
    "noEmitOnError": true,
    "removeComments": false,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist/"
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": false
  }
}